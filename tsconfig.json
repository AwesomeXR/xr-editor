{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2017"],
    "skipLibCheck": true
  },
  "include": ["src", "demo"]
}
